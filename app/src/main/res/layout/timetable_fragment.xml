<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <FrameLayout
        android:id="@+id/time_table_owner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:layout_height="match_parent">


       <HorizontalScrollView
           android:id="@+id/scroll_view"
           android:background="@drawable/gradient2"
           android:layout_width="match_parent"
           android:layout_height="160dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/sunday"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_sunday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sun"
                            android:textColor="@color/teal_200"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/monday"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_monday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mon"
                            android:textColor="@color/teal_200"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/tuesday"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_tuesday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tues"
                            android:textColor="@color/teal_200"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/wednesday"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_wednesday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wed"
                            android:textColor="@color/teal_200"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/thursday"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_thursday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thurs"
                            android:textColor="@color/teal_200"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/friday"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_friday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fri"
                            android:textColor="@color/teal_200"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/saturday"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_saturday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sat"
                            android:textColor="@color/teal_200"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/open_cardview"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/scroll_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:text="----"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/timing"
        android:layout_below="@+id/open_cardview"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timing"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/timing"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:elevation="28dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FROM"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/red"/>

        <TextView
            android:id="@+id/time_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="------"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20dp"
            android:textColor="@color/teal_200"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_layout_time_table"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/timing"
        android:layout_marginTop="58dp"
        android:background="@color/red"
        android:layout_marginLeft="108dp"
        android:layout_marginRight="108dp"
        android:orientation="horizontal" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/closed_animation"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:padding="1dp"
        android:layout_below="@+id/linear_layout_time_table"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="invisible"
        app:lottie_rawRes="@raw/closed" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/open_animation"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:padding="1dp"
        android:layout_below="@+id/linear_layout_time_table"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="invisible"
        app:lottie_rawRes="@raw/open" />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/timing"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:elevation="28dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="15dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TO"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textSize="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/red"/>

            <TextView
                android:id="@+id/to_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="------"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="20dp"
                android:textColor="@color/teal_200"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/update_Timing"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@color/teal_700"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/red" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/red" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Edit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <ProgressBar
        android:id="@+id/progress_bar_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/update_Timing"
        android:layout_marginBottom="50dp"/>

        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>