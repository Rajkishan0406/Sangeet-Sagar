<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:layout_height="wrap_content">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@color/light"
                 android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/sun_card"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:layout_height="100dp"
            android:elevation="15dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/sun_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/sun_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textSize="28dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mon_card"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:elevation="15dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/mon_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/item_layout_background"
                    android:scaleType="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/mon_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:textSize="28dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tues_card"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_height="100dp"
                android:elevation="15dp"
                android:layout_marginLeft="190dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/tues_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tues_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tues"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:textSize="28dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/wed_card"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_height="100dp"
                android:elevation="15dp"
                android:layout_marginLeft="280dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/wed_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/wed_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wed"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:textSize="28dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/thurs_card"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_height="100dp"
                android:layout_marginLeft="370dp"
                android:elevation="15dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/thurs_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/thurs_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thurs"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:textSize="28dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fri_card"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_height="100dp"
                android:elevation="15dp"
                android:layout_marginLeft="450dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/fir_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fri_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fri"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:textSize="28dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sat_card"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_height="100dp"
                android:elevation="15dp"
                android:layout_marginLeft="450dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/sat_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/sat_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sat"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:textSize="28dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

             </LinearLayout>

        </ScrollView>


    <androidx.cardview.widget.CardView
        android:id="@+id/open_cardview"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/scroll_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:text="Open"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/timing"
        android:layout_below="@+id/open_cardview"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timing"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/timing"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:elevation="28dp"
        app:cardCornerRadius="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FROM"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/red"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="9:30 AM"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20dp"
            android:textColor="@color/teal_200"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/timing"
        android:layout_marginTop="58dp"
        android:background="@color/red"
        android:layout_marginLeft="108dp"
        android:layout_marginRight="108dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/timing"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:elevation="28dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TO"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textSize="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/red"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="8:00 PM"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="20dp"
                android:textColor="@color/teal_200"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/update_Timing"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                app:lottie_loop="true"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/button"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/red" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/red" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Edit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/update_Timing"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>