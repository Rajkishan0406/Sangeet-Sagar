<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:elevation="15dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@id/forth">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/forth"
       android:scaleType="fitXY"
       android:src="@drawable/item_layout_background"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/owner_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="2dp"
        android:elevation="15dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/item_layout_background"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/shadow"
                android:layout_alignParentBottom="true"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">

            <ImageView
                android:id="@+id/owner_image"
                android:layout_width="110dp"
                android:layout_height="140dp"
                android:layout_marginTop="-3dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="0dp"
                android:src="@drawable/profile_image"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:background="@color/red"
                android:layout_toLeftOf="@+id/owner_name"/>

            <TextView
                android:id="@+id/owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Rajnish Prasad Choudhary"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-condensed"
                android:layout_margin="12dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="22dp"/>

    <TextView
        android:id="@+id/first_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/owner_card"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Sangeet Sagar is located in Muzaffarpur. Sangeet Sagar is working in Electronic stores, Shopping, Household appliances and goods activities."
        android:textSize="18dp"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/second_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="AHUJA RADIOS is today Indiaâ€™s leading manufacturer and
exporter of Public Address Equipment. Established in 1940,
in last 8 decades we have been able to cement AHUJA as the most trusted
brand in sound reinforcement industry by introducing reliable products through
continuous research and development. Right since the inception company has
aspired and worked diligently towards offering wide range of products to fulfill every
conceivable PA application requirement."
        android:layout_below="@+id/first_text"/>


    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:text="ADDRESS:"
        android:textStyle="bold"
        android:layout_below="@id/second_text"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/third_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/address"
        android:layout_below="@id/second_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:text="Opposite Ranjit Hotel, Motijheel,"/>

    <TextView
        android:id="@+id/forth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/address"
        android:layout_below="@id/third_text"
        android:text="Muzafarpur, 842001 (BIHAR)"
        android:layout_marginLeft="3dp"/>


</RelativeLayout>